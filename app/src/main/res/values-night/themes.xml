<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar and Navigation bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Color scheme -->
        <item name="colorOnPrimary">@color/notmaterial_lightpurple</item>
        <item name="colorPrimary">@color/notmaterial_purple</item>
        <item name="colorOnBackground">@color/notmaterial_white</item>
        <item name="colorOnSurface">@color/notmaterial_secondary</item>
    </style>
</resources>